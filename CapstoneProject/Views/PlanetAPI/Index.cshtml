@model List<PlanetInfoViewList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-semibold mb-4">Planet List</h4>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h6 class="fw-normal mb-2">@item.name</h6>
                        </div>
                        <div class="d-flex justify-content-between align-items-end mt-1">
                            <img src="@item.imgSrc.Select(x=>x.img).First()" width="150" height="150">
                        </div>
                        <div class="d-flex justify-content-between align-items-end mt-1">
                            <div class="role-heading">
                                <h4 class="mb-1">@item.description</h4>
                                <br>
                                <hr>
                                <h6>Planet Order: @item.planetOrder</h6>
                                <a href="@item.wikiLink">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
