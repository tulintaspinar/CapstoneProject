@model List<Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Notifications /</span> All Notification
    </h4>
    <div class="card">
        <a href="/Notification/AddNotification" class="btn btn-outline-primary">Add New Notification</a>
        <div class="table-responsive text-nowrap">
            <table class="table">
              <thead>
                  <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Open</th>
                  </tr>
              </thead>
                <tbody class="table-border-bottom-0">
                  @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><strong>@item.Title</strong></td>
                            <td>@item.Date.ToShortDateString()</td>
                            @if(item.Status=="Not Read")
                            {
                                <td><span class="badge bg-label-danger me-1">@item.Status</span></td>
                            }
                            else
                            {
                                <td><span class="badge bg-label-success me-1">@item.Status</span></td>
                            }
                            <td><a href="/Notification/OpenNotification/@item.NotificationId" class="btn btn-outline-primary">Open</a></td>
                        </tr>
                    }
              </tbody>
          </table>
      </div>
    </div>
</div>
