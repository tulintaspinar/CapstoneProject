@model NotificationEditDTO
@{
    ViewData["Title"] = "OpenNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-12 mb-12"><span class="text-muted fw-light">Notifications /</span> Open Notification</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-12">
                <div class="card-body demo-vertical-spacing demo-only-element">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Status" value="Readed" />
                        <br />
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon11">Title</span>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <br />
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon11">Description</span>
                            <textarea type="text" class="form-control" rows="5" cols="5" asp-for="Description"></textarea>
                        </div>
                        <br />
                        <div class="input-group">
                            <button type="submit" class="btn btn-primary">Readed</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>