@model NewsArticleEditDTO
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row mb-4">
        <div class="col-md mb-4 mb-md-0">
            <div class="card">
                <h5 class="card-header">News Article Add</h5>
                <div class="card-body">
                    <form class="browser-default-validation">
                        <input type="hidden" asp-for="ID" />
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-name">Title</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Enter title">
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-name">Description</label>
                            <textarea type="text" asp-for="Description" class="form-control" placeholder="Enter description" required=""></textarea>                            
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Please choose file</label>
                            <input asp-for="ImageUrl" class="form-control" type="file" id="formFile">
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>