
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card tale-bg">
                <div class="card-people mt-auto">
                    <img src="~/images/people.png" style="margin-left:30px; width:650px;" alt="weather"/>
                    <div class="container">
                        <div class="card-body" style="text-align:center;">
                            <div>
                                <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.havaDurumu<sup>C</sup></h2>
                            </div>
                            <div class="ml-2">
                                <h4 class="location font-weight-normal"> Trabzon / Türkiye</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=" col-md-3 card app-calendar-wrapper">
            <div class="row g-0">
                <div class="col app-calendar-sidebar" id="app-calendar-sidebar">
                    <div class="p-3">
                        <div class="inline-calendar"></div>
                    </div>
                </div>
                <div class="col app-calendar-content">

                    <div class="offcanvas offcanvas-end event-sidebar" tabindex="-1" id="addEventSidebar" aria-labelledby="addEventSidebarLabel">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
    </div>
</div>

