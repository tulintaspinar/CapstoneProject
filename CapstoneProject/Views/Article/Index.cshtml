@model List<Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Article /</span> All Article
    </h4>
    <div class="card">
        <a href="/Article/AddArticle" class="btn btn-outline-primary offcanvas-title">Add New Article</a>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="table-active">
                            <td>@count</td>
                            <td><strong>@item.Title</strong></td>
                            <td>@item.Date.ToShortDateString()</td>
                            <td><span class="badge bg-label-success me-1">@item.ArticleCategory.CategoryName</span></td>
                            <td><a href="/Article/EditArticle/@item.ArticleID" class="btn btn-outline-primary">Update</a></td>
                            <td><a href="/Article/DeleteArticle/@item.ArticleID" class="btn btn-outline-primary">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>