@model ArticleAddDTO
@{
    ViewData["Title"] = "AddArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xl-12">
        <form method="post" enctype="multipart/form-data">
            <div class="card mb-4">
                <h5 class="card-header">ADD ARTICLE</h5>
                <div class="card-body">
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Title</label>
                        <div class="col-md-10">
                            <input asp-for="Title" class="form-control" type="text" placeholder="Vuexy">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-search-input" class="col-md-2 col-form-label">Description</label>
                        <div class="col-md-10">
                            <textarea asp-for="Description" class="form-control" rows="10" cols="6" value="Description"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-md-2 col-form-label" for="basic-default-category">Category</label>
                        <div class="col-md-10">
                            <select class="form-select" id="basic-default-category" required="" asp-for="ArticleCategoryName" asp-items="new SelectList((ViewBag.categories))">
                                <option value="">---Select---</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <h5 class="card-header">File</h5>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Please choose file</label>
                                <input asp-for="Image" class="form-control" type="file" id="formFile">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <button type="submit" class="btn btn-outline-info">ADD NEW ARTİCLE</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
