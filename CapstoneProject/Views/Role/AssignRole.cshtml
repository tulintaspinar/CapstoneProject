@model List<RoleAssignDTO>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">System User: @TempData["User"]</h5>
        <div class="table-responsive text-nowrap">
            <form method="post">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <input type="hidden" asp-for="@Model[i].RoleID" />
                                <input type="hidden" asp-for="@Model[i].Name" />
                                <td><i class="ti ti-brand-angular ti-lg text-danger me-3"></i> <strong>@Model[i].Name</strong></td>
                                <td><input type="checkbox" asp-for="@Model[i].Exits" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <center><button type="submit" class="btn btn-outline-warning" style="width:150px; margin-bottom:20px;">UPDATE</button></center>
            </form>

        </div>
    </div>
</div>


