
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl-6 col-md-6 col-6 mb-6">
            <div class="card">
                <div class="card-header pb-3">
                    <h5 class="card-title mb-0">Employee List</h5>
                    <small class="text-muted">Total Employee List</small>
                </div>
                <div class="card-body">
                    <div id="ordersLastWeek"></div>
                    <div class="d-flex justify-content-between align-items-center gap-3">
                        <h4 class="mb-0">Count : @ViewBag.TotalEmployeeCount</h4>
                        <small class="text-success"><a href="/Report/TotalEmployee" class="btn btn-outline-warning">Report</a></small>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-6 col-md-6 col-6 mb-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h5 class="card-title mb-0">Monthly Payment</h5>
                    <small class="text-muted">Last 1 Month</small>
                </div>
                <div id="salesLastYear"></div>
                <div class="card-body pt-0">
                    <div class="d-flex justify-content-between align-items-center mt-3 gap-3">
                        <h4 class="mb-0">@ViewBag.TotalPayment</h4>
                        <small class="text-danger"><a href="/Report/TotalPayment" class="btn btn-outline-warning">Report</a></small>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>