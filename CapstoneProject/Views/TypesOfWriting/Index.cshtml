@model List<TypesOfWriting>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Users List Table -->
    <div class="card">
        <div class="card-header border-bottom">
            <h5 class="card-title mb-3">TYPES OF WRITING</h5>
            <div class="d-flex justify-content-between align-items-center row pb-2 gap-3 gap-md-0">
                <div class="col-md-4 user_role"></div>
                <div class="col-md-4 user_plan"></div>
                <div class="col-md-4 user_status"></div>
            </div>
        </div>
@*        <a href="/TypesOfWriting/Add" class="btn btn-outline-primary offcanvas-title">Add New Types Of Writing</a>*@
        <div class="card-datatable table-responsive">
            <table class="datatables-users table border-top">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>NAME</th>
                       @* <th>Delete</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                           @* <td><a href="/TypesOfWriting/Delete/@item.TypesOfWritingID" class="btn btn-outline-danger">Delete</a></td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
