@{
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="en">
@await Component.InvokeAsync("HomeHead")
<body>
    <div class="main-wrapper">
        <div class="mouse-cursor cursor-outer"></div>
        <div class="mouse-cursor cursor-inner"></div>
        <div id="my_switcher" class="my_switcher">
            <ul>
                <li>
                    <a href="javascript: void(0);" data-theme="light" class="setColor light">
                        <span title="Light Mode">Light</span>
                    </a>
                </li>
                <li>
                    <a href="javascript: void(0);" data-theme="dark" class="setColor dark">
                        <span title="Dark Mode">Dark</span>
                    </a>
                </li>
            </ul>
        </div>

        @await Component.InvokeAsync("HomeHeader")
        @await Component.InvokeAsync("HomeMobileHeader")

        @await Component.InvokeAsync("HomePageBanner")
        @await Component.InvokeAsync("HomeMorePosts")
        @await Component.InvokeAsync("HomePageNewsArticle")
        @await Component.InvokeAsync("HomePageTrendTopics")
        @await Component.InvokeAsync("HomePageLastNewsArticle")
        @await Component.InvokeAsync("HomePageWriters")

        @await Component.InvokeAsync("HomeFooter")
    </div>
    @await Component.InvokeAsync("HomeScript")
</body>
</html>