@model List<Article>
@{
    Layout = "~/Views/Shared/_AreasLayout.cshtml";
}
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xl-12">
                @foreach (var item in Model)
                {
                    <div class="content-block post-list-view mt--30">
                        <div class="post-thumbnail">
                            <a href="/Homepage/Article/ArticleDetail/@item.ArticleID">
                                <img src="~/IMAGES/ArticleImages/@item.ImageUrl" alt="Post Images">
                            </a>
                            <a class="photo-popup size-medium position-top-center icon-color-secondary" href="/Homepage/Article/ArticleDetail/@item.ArticleID"><span class="play-icon"></span></a>
                        </div>
                        <div class="post-content">
                            <div class="post-cat">
                                <div class="post-cat-list">
                                    <a class="hover-flip-item-wrapper" href="#">
                                        <span class="hover-flip-item">
                                            <span style="color:black;">@item.ArticleCategory.CategoryName</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <h4 class="title"><a href="/Homepage/Article/ArticleDetail/@item.ArticleID">@item.Title</a></h4>
                            <br>
                            <br>
                            <h6>@item.Description.Substring(0,5)...</h6>
                            <div class="post-meta-wrapper">
                                <div class="post-meta">
                                    <div class="content">
                                        <h6 class="post-author-name">
                                            <a class="hover-flip-item-wrapper" href="#">
                                                <span class="hover-flip-item">
                                                    <span>@item.WriterName</span>
                                                </span>
                                            </a>
                                        </h6>
                                        <ul class="post-meta-list">
                                            <li>@item.Date.ToShortDateString()</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>