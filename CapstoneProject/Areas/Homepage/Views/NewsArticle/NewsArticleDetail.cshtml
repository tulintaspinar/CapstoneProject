@model NewsArticle
@{
    ViewData["Title"] = "NewsArticleDetail";
    Layout = "~/Views/Shared/_AreasLayout.cshtml";
}
<div class="post-single-wrapper axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="axil-post-details">
                    <h2 class="has-medium-font-size">
                        @Model.Title
                    </h2>
                    <center>
                        <figure class="wp-block-image">
                            <img style="width:800px;height:400px;" src="~/IMAGES/NewsArticleImages/@Model.ImageUrl" alt="Post Images">
                        </figure>
                    </center>
                    <p>
                        @Model.Description
                    </p>

                    <div class="about-author">
                        <div class="media">
                            <div class="thumbnail">
                                <a href="#">
                                    <img style="height:100px;width:100px;" src="~/IMAGES/UserImages/@ViewBag.user.ImageUrl" alt="Author Images">
                                </a>
                            </div>
                            <div class="media-body">
                                <div class="author-info">
                                    <h5 class="title">
                                        <a class="hover-flip-item-wrapper" href="#">
                                            <span class="hover-flip-item">
                                                <span style="color:black;">@ViewBag.user.Name @ViewBag.user.Surname</span>
                                            </span>
                                        </a>
                                    </h5>
                                    <span class="b3 subtitle">@ViewBag.user.Job</span>
                                </div>
                                @*                                <div class="content">
                                <p class="b1 description">
                                At 29 years old, my favorite compliment is being
                                told that I look like my mom. Seeing myself in her image, like this
                                daughter up top, makes me so proud of how far I’ve come, and so thankful
                                for where I come from.
                                </p>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="axil-more-stories-area axil-section-gap bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2 class="title">More News Articles</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.newsArticles)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                    <div class="post-stories content-block mt--30">
                        <div class="post-thumbnail">
                            <a href="/Homepage/NewsArticleDetail/@item.Id">
                                <img style="height:100px;width:100px;" src="~/IMAGES/NewsArticleImages/@item.ImageUrl" alt="Post Images">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="post-cat">
                                <div class="post-cat-list">
                                    <a href="/Homepage/NewsArticleDetail/@item.Id">@item.ArticleCategory.CategoryName</a>
                                </div>
                            </div>
                            <h5 class="title">
                                <a href="/Homepage/NewsArticleDetail/@item.Id">
                                    @item.Title
                                </a>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>