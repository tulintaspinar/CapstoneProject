@model List<GetNewsArticleQueryResult>
@{
    int count = 0;
}
<div class="axil-trending-post-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2 class="title">Last News Article</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-content">
                    <div class="row trend-tab-content tab-pane fade show active" id="trendone" role="tabpanel" aria-labelledby="trend-one">
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-lg-8">
                                <div class="content-block trend-post post-order-list axil-control">
                                    <div class="post-inner">
                                        <span class="post-order-list">@count</span>
                                        <div class="post-content">
                                            <div class="post-cat">
                                                <div class="post-cat-list">
                                                    <a class="hover-flip-item-wrapper" href="#">
                                                        <span class="hover-flip-item">
                                                            <span>@item.ArticleCategory.CategoryName</span>
                                                        </span>
                                                    </a>
                                                </div>
                                            </div>
                                            <h3 class="title">
                                                <a href="post-details.html">
                                                    @item.Title
                                                </a>
                                            </h3>
                                            <div class="post-meta-wrapper">
                                                <div class="post-meta">
                                                    <div class="content">
                                                        <h6 class="post-author-name">
                                                            <a class="hover-flip-item-wrapper" href="author.html">
                                                                <span class="hover-flip-item">
                                                                    <span>@item.WriterName</span>
                                                                </span>
                                                            </a>
                                                        </h6>
                                                        <ul class="post-meta-list">
                                                            <li>@item.Date.ToShortDateString()</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="post-thumbnail">
                                        <a href="post-details.html">
                                            <img style="width:300px; height:300px;" src="~/IMAGES/NewsArticleImages/@item.ImageUrl" alt="Post Images">
                                        </a>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</div>